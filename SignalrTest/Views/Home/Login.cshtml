@{
    ViewBag.Title = "登录"; 
    Layout = null;
} 
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"> 
        <meta name="viewport" content="initial-scale=1.0, maximum-scale=1.0, user-scalable=no" /> 
     <title>易信国际娱乐平台</title>
    <link rel="shortcut icon" href="/modules/animg/yxyx.png" type="image/x-icon"/>
     <link rel="stylesheet" type="text/css" href="/modules/ancss/pub.css">
    <meta name="description" content="易信国际" />
<meta name="keywords" content="易信国际"/>
    <script src="/Scripts/jquery-1.8.2.js"></script>
<style type="text/css"> 

         .content {
             width: 100%;
             height: 100%;
             position: absolute;
             background: url("/modules/animg/vip-login-bg.jpg") center center;
             background-size: 100% 100%;
         }
        .content .content-center {
            width: 95%;
            height: 360px;
            margin: 0 auto;
            position: relative;
            top: 50%;
            margin-top: -210px;
        }
        .content .content-center h1 {
            text-align: center;
            font-size: 24px;
            color: white;
            font-weight: inherit;
        }
        .content .content-center .main-cont {
            width: 95%;
            margin: 0 auto;
            height: 300px;
            margin-top: 20px;
            background: rgba(255, 255, 255, 0.28);
            overflow: hidden;
        }
        .content .content-center .main-cont ul li {
            margin-top: 35px;
        }
        .content .content-center .main-cont ul li input {
            width: 90%;
            height: 42px;
            display: block;
            margin: 0 auto;
            color: #9da5a6;
            font-size: 16px;
            background: #dedede;
            padding-left: 25px;
            box-sizing: border-box;
            border: 1px solid #a3aeb7;
            outline: none;
            border-radius: 4px;
        }
        .content .content-center .main-cont ul li .login-vip {
            width: 90%; 
            height: 100%;
            height: 53px;
            border: 1px solid #d2d2d2;
            display: block;
            margin: 0 auto;
            margin-top: 10px;
            opacity: .8;
            transition: all .2s ease;
        }
        .content .content-center .main-cont ul li .login-vip:hover {
            opacity: 1;
        }
        .content .content-center .main-cont ul li .login-vip img {
            width: 100%;
            height: 100%;
        }
        .content .content-center .main-cont ul li p {
            color: white;
            font-size: 16px;
            text-align: center;
        }
    </style>
    <!--[if lt IE 9]>
    <script type="text/javascript">
        alert("您的浏览器版本太低，为了您的访问顺畅，请更换高版本浏览器！！");
    </script>
    <![endif]-->
    <script type="text/javascript">

        function CheckLogin() {

            var gname = document.getElementById("txtUname").value;
            var gpass = document.getElementById("txtPWD").value;


            if (gname == "") {
                alert("账号不能为空错误！！！");
                document.getElementById("txtUname").value = "";
                return false;
            }

            if (gpass == "") {
                alert("密码不能为空错误！！！");
                return false;
            }
            $.post('/Home/LoginCheck', { txtUname: gname, txtPWD: gpass }, function (data) {
                if (data.result) {
                    window.location.href = '/Home/Login1';
                } else {
                    alert('用户名或密码错误');
                }
            });
        }
        $(document).on("keypress", function (e) {
            if (e.keyCode == 13) {
                CheckLogin();
            }
        });
		</script>
</head>
<body>
<div class="content"   id='content'>
    <div class="content-center">
        <h1>VIP登录</h1>
        <div class="main-cont">

			@*<form method="POST" action="LoginCheck" onSubmit="return CheckLogin()">*@
            <ul>
                <li>
                    <input type="text" placeholder="请输入账号" id="txtUname" name="txtUname" />
                </li>
                <li>
                    <input type="password" placeholder="请输密码" id="txtPWD" name="txtPWD"/>
                </li>
                <li style="margin-top: 40px">
                    <button class="login-vip" onclick="CheckLogin()"><img src="/modules/animg/login-vip.jpg" alt=""/></button>
                </li>
                <li style="margin-top: 20px">
                    <p>7 x24 hours online</p>
                </li>
            </ul>
            @*</form>*@
        </div>
    </div>
</div>


</body>
</html>













