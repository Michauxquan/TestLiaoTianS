@{
    ViewBag.Title = "登录"; 
    Layout = null;
} 

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title></title>
    <link rel="stylesheet" type="text/css" href="/modules/plug/antip/xcConfirm.css">
      <script src="/Scripts/jquery-1.8.2.js"></script>
	<script src="/modules/plug/antip/xcConfirm.js" type="text/javascript" charset="utf-8"></script> 
    <link rel="stylesheet" type="text/css" href="/modules/ancss/index.css"/>
    <style>
        .logo {    background-attachment: scroll;
    background-image: url(../modules/animg/background.svg);
    background-repeat: no-repeat;
    background-position: 50% 100%;
    background-size: 180%;
    display: inline-block;
    width: 100%;
    height: 170px;
    margin-left: auto;
    margin-right: auto;
        }
        .form-signin-heading{
                font-weight: 400;
    font-size: 24px;
    width: 100px;
    text-align: center;
    margin-left: auto;
    margin-right: auto;
    margin-top: 0;
    color: #85b033;
        }
        .form-control {
            display: block;
            width: 100%;
            height: 34px;
            padding: 6px 0 0 60px;
            font-size: 12px;
            color: #555;
            border: 0;
            border-bottom: 1px solid #9b9b9b;
            border-radius: 0;
        }
        .form-signin {
    padding-right: 50px;
    padding-left: 50px;
    margin-right: auto;
    margin-left: auto;
}
        .sr-only {
    position: relative;
    display: inline-block;
    height: auto;
    width: auto;
    font-size: 14px;
    top: 35px;
}
        .btn {
    display: inline-block;
    padding: 6px 12px;
    margin-bottom: 0;
    font-size: 14px;
    font-weight: normal;
    line-height: 1.42857143;
    text-align: center;
    white-space: nowrap;
    vertical-align: middle;
    -ms-touch-action: manipulation;
    touch-action: manipulation;
    cursor: pointer;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    background-image: none;
    border: 1px solid transparent;
    border-radius: 4px;
    color: #fff;
    background-color: #2b3f57;
    width:100%;
}  
            </style>
</head>
<body style="background: #FFF;">
    <div class="logo">
        <img src="/modules/animg/logo.png" style="    width: 250px;    height: 100px;" />
    </div> 
    <div class="form-signin">
        <h2 class="form-signin-heading" id="login">登入</h2>
        <label for="inputEmail" class="sr-only">帐号</label>
        <input id="username" name="username" class="form-control" placeholder="- -请使用您的人和帐号登入- -" required="" autofocus="">
        <label for="inputPassword" class="sr-only">密码</label>
        <input type="password" name="password" id="loginpass_source" class="form-control" placeholder="" required="">
        <div class="notice">&nbsp;</div>
         
        <button type="submit" name="subbutton" id="submit" class="btn" onclick="LoginNow()" >立即登陆</button> 
    </div>
</body>
	<script type="text/javascript">


	    function LoginNow() {
	        var loginuser = document.getElementById("username").value;
	        var typepw = document.getElementById("loginpass_source").value;

	        if (loginuser == '') {
	            window.wxc.xcConfirm('请填写用户名', window.wxc.xcConfirm.typeEnum.warning);
	            return false;
	        }
	        if (typepw == '') {
	            window.wxc.xcConfirm('请填写登录密码', window.wxc.xcConfirm.typeEnum.warning);
	            return false;
	        }
	        $.post('/Home/UserLogin', { userName: loginuser, pwd: typepw }, function (data) {
	            if (data.result == 1) {
	                location.href = "/Base/CQLottery";
	            } else {
	                window.wxc.xcConfirm('账户或密码不正确', window.wxc.xcConfirm.typeEnum.warning);
	            }
	        });
	    }

	    $(document).on("keypress", function (e) {
	        if (e.keyCode == 13) {
	            $(".login").click();
	        }
	    });
	</script>
</html>
