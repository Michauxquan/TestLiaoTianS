<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Scripts/bootstrap/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap/jquery-2.1.4.js"></script>
    <script src="~/Scripts/bootstrap/bootstrap-3.3.6.js"></script> 
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript"> $(function () { $('.body').height($(window).height()) });;</script>
    <style>
        .left {float:left; }
        .right{float:right;}
        .boxstyle{box-sizing:border-box;height:100%;}
        .clear{clear:both;width:0px;height:0px;}
        .sysmsg{width: 100%;    margin: 5px auto;    text-align: center;    border-radius: 5px;    background-color: #eee;    padding: 5px;    color: #666;}
	   .mymsg{ margin: 5px; float:right;      border-radius: 5px;    background-color: #eee;    padding: 5px;    color: #666;}
	   .othermsg{width: 200px; margin: 5px; float:left;    text-align: center;    border-radius: 5px;    background-color: #eee;    padding: 5px;    color: #666}
	   .clear{clear:both;width:0px;width:0px;}
        .leftbox {width:20%;height:100%;background-color:#2C3F56;        }
        .lefbox a{  font-weight:bolder; margin-bottom: 0;border: 0;border-bottom: 1px solid #ddd;z-index: 2;color: #fff;background-color: #233245;border-color: #f5f5f5;}
     
        .fa, .fa-stack {
    display: inline-block;
}
        .fa {
    font: 14px/1 FontAwesome;
    font-size: inherit;
    text-rendering: auto;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}
  a.list-group-item .pull-right {
    line-height: 1.42857143;
} 
.fa.fa-pull-right, .fa.pull-right {
    margin-left: .3em;
} 
.pull-right {
    float: right!important;
} 
    </style>
</head>
<body class="body">
    <div class="left boxstyle leftbox" style="">
        <h2 style="background-color:#B9CC61;width:100%;margin-top:0px;margin-bottom:0px;padding:10px 0px 5px 20px;color:#FFF;">易信国际</h2>
        <a class="list-group-item" style="background-color: #233245;color:#f5f5f5 ;border-color: #f5f5f5;" href="/Base/CQLottery">重庆时时彩</a> 
        <a class="list-group-item" style="background-color: #233245;color: #f5f5f5;" href="/Base/HGLottery">韩国1.5分彩</a>
        <a class="list-group-item" style="background-color: #233245;color: #f5f5f5;" href="/Base/DJLottery">东京1.5分彩 </a>
        <a class="list-group-item" style="background-color: DarkRed;color: #f5f5f5;" href="/home/logout">注销</a>
    </div>
    <div class="right boxstyle" style="width:80%;height:100%">
        @RenderBody()
    </div>
      @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
